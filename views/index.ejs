<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="manifest" href="/manifest.json">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/index.css" />

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script type="module" src="/javascripts/usernameHandler.js"></script>

</head>

<body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') -%>

    <!-- Username Modal -->
    <div class="modal fade" id="usernameModal" tabindex="-1" aria-labelledby="usernameModalLabel" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="usernameModalLabel">Set Your Username</h5>
                </div>
                <div class="modal-body">
                    <form id="usernameForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" required>
                        </div>
                        <button type="submit" class="btn submit-btn" id="usernameSubmit">Continue</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Username Modal -->
    <div class="modal fade" id="usernameModal" tabindex="-1" aria-labelledby="usernameModalLabel" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="usernameModalLabel">Set Your Username</h5>
                </div>
                <div class="modal-body">
                    <form id="usernameForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" required>
                        </div>
                        <button type="submit" class="btn submit-btn" id="usernameSubmit">Continue</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

<!-- HEADER -->
<%- include('./partials/header.ejs') -%>

    <div class="container">
        <!-- Header Section -->
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4 text-center"><%= title %></h1>
            </div>
        </div>

        <form class="row g-3" action="/" method="POST" enctype="multipart/form-data" style="padding-bottom: 1%">
            <div class="col-12">
                <h4>Sort & Filter</h4>
            </div>
            <div class="col-md-4">
                <select class="form-select" name="timeFil" id="timeFil">
                    <option selected>Time Filter</option>
                    <option value="1">Newest</option>
                    <option value="2">Oldest</option>
                </select>
            </div>
            <div class="col-md-4">
                <select class="form-select" name="nameFil" id="nameFil">
                    <option selected>Name Filter</option>
                    <option value="Completed">Identified Plants</option>
                    <option value="In-Progress">Unidentified Plants</option>
                </select>
            </div>
            <div class="col-md-4">
                <select class="form-select" name="locationFil" id="locationFil">
                    <option selected>Location Filter</option>
                    <option value="Nearest">Nearest</option>
                    <option value="Furthest">Furthest</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="leaveFil" id="leaveFil">
                    <option selected>Leaves Filter</option>
                    <option value="Yes">With Leaves</option>
                    <option value="No">Without Leaves</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="flowerFil" id="flowerFil">
                    <option selected>Flower Filter</option>
                    <option value="Yes">With Flowers</option>
                    <option value="No">Without Flowers</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="fruSeeFil" id="fruSeeFil">
                    <option selected>Fruit/Seed Filter</option>
                    <option value="None">None</option>
                    <option value="Fruit">Fruit</option>
                    <option value="Seeds">Seeds</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" name="sunFil" id="sunFil">
                    <option selected>Sun Exposure Filter</option>
                    <option value="Full Sun">Full Sun</option>
                    <option value="Partial Sun / Shade">Partial Sun / Shade</option>
                    <option value="Full Shade">Full Shade</option>
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn float-md-end" style="background: #E9EDC9">Apply</button>
            </div>
        </form>
    </div>

    <!-- Plants Display Grid -->
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4" id="plant_list">
            <div class="col" id="plant_template">
                <div class="card h-100 plant-card plant-hover">
                    <a id="plant_page_link">
                        <img src="" class="card-img-top" alt="Image of" id="plant_photo">
                    </a>
                    <div class="card-body plant-hover">
                        <h5 class="card-title text-center">
                            <a id="plant_name_with_link" class="text-decoration-none text-dark">Plant Name</a>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- FOOTER -->
<%- include('./partials/footer.ejs') -%>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
</script>
<script src="/javascripts/index.js"></script>
<script src="/javascripts/idb-utility.js"></script>
</body>
</html>