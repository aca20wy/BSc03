                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <button type="submit" class="btn btn-primary">Accept Suggestion</button>
                        </form>
                    </div>
                    <div class="delete-form">
                        <h5>Delete Plant:</h5>
                        <form action="/plant/<%= plant._id %>/delete" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                <% } else { %>
                    <div class="suggestion-form">
                        <h5>Suggest a New Name:</h5>
                        <!-- Form to submit a new name suggestion -->
                        <form action="/plant/<%= plant._id %>/suggest-name" method="POST">
                            <input type="hidden" name="userId" value="<%= user.id %>">
                            <input type="text" name="suggestedName" placeholder="Enter a new name" required>
                            <button type="submit" class="btn btn-info">Submit Suggestion</button>
                        </form>
                    </div>
                <% } */%>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <%- include('./partials/footer.ejs') -%>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</body>
</html>
