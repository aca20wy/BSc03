<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= plant.name %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/plant.css">

    <script type="module" src="/javascripts/chatHandler.js"></script>
</head>

<body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') -%>

    <div class="container">
        <!-- Plant Name and Status -->
        <div class="row">
            <div class="col-12 plant-name-header">
                <h1 class="display-4" id="plantName" data-original-value="<%= plant.name %>"><%= plant.name %></h1>
                <p class="text-muted" id="plantStatus" data-original-value="<%= plant.nameStatus %>"><%= plant.nameStatus %></p>
            </div>
        </div>

        <!-- Edit name and status -->
        <div class="row">
            <button id="editBtn" class="btn btn-outline-secondary" style="display: none;">
                <i class="bi bi-pen"></i> Edit
            </button>
            <div id="saveCancelBtns" style="display: none;">
                <button id="saveChangesBtn" class="btn">Save</button>
                <button id="cancelChangesBtn" class="btn btn-light">Cancel</button>
            </div>
        </div>

        <div class="row align-items-start detail-view">
            <!-- Plant Image -->
            <div class="col-md-6 plant-image">
                <img src="<%= plant.img %>" alt="Image of <%= plant.name %>" class="img-fluid">
            </div>

            <!-- Plant Details -->
            <div class="col-md-6 plant-details mb-5">
                <div class="list-group list-group-flush">
                    <div class="list-group-item"><strong>Date and Time Seen:</strong> <%= plant.dateOfSighting.toDateString() %></div>
                    <div class="list-group-item"><strong>Location:</strong> <%= plant.location %></div>
                    <div class="list-group-item"><strong>Description:</strong> <%= plant.description %></div>
                    <div class="list-group-item"><strong>Height:</strong> <%= plant.height %> cm</div>
                    <div class="list-group-item"><strong>Spread:</strong> <%= plant.spread %> cm</div>
                    <div class="list-group-item"><strong>Leaves:</strong> <%= plant.leaves %></div>
                    <div class="list-group-item"><strong>Flowers:</strong> <%= plant.flowers %></div>
                    <div class="list-group-item"><strong>Flower Colour:</strong> <%= plant.flowerColour %></div>
                    <div class="list-group-item"><strong>Fruit Seeds:</strong> <%= plant.fruitSeeds %></div>
                    <div class="list-group-item"><strong>Sun Exposure:</strong> <%= plant.sunExposure %></div>
<!--                    <a href="<%= plant.dbPediaUri %>" class="list-group-item list-group-item-action">More Info on DBPedia</a>-->
                </div>
            </div>
        </div>

        <!-- DBPedia Section -->
        <div class="row">
            <div class="col-12 dbpedia-section">
                <h5>Additional Information</h5>
                <p>more detailed information about this plant: <a href="<%= plant.dbPediaUri %>" class="dbpedia-link">DBPedia</a>.</p>
            </div>
        </div>

        <!-- Chat Section -->
        <div class="row chat-section my-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">Live Chat</div>
                    <div class="card-body">
                        <div id="chatHistory" style="height: 300px; overflow-y: auto; background-color: #f8f9fa;">
                            <!-- load chat history -->
                            <% plant.chats.forEach(chat => { %>
                                <div>
                                    <strong><%= chat.chatUsername %>:</strong> <%= chat.chatText %>
                                </div>
                            <% }); %>
                        </div>
                        <form id="chatForm" class="mt-3" onsubmit="sendChat(); return false;">
                            <div class="row">
                                <div class="col-md-11">
                                    <input type="text" id="chatText" class="form-control" placeholder="Type a message..." required>
                                </div>
                                <div class="col-md-1 ">
                                    <button id="chatSendBtn" class="btn btn-block">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden input to pass plant ID to JavaScript -->
    <input type="hidden" id="plantId" value="<%= plant._id %>">
    <input type="hidden" id="plantUsername" value="<%= plant.username %>">

    <!-- FOOTER -->
    <%- include('./partials/footer.ejs') -%>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script type="module" src="/javascripts/editPlant.js"></script>
</body>
</html>
