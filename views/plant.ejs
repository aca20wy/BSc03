<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title id="plant_title"></title>
    <link rel="stylesheet" href="/stylesheets/style.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/plant.css">

    <script type="module" src="/javascripts/chatHandler.js"></script>
</head>

<body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') -%>

    <div class="container">
        <!-- Plant Name and Status -->
        <div class="row">
            <div class="col-12 plant-name-header">
                <h4 class="text-muted" id="plant_status" ></h4>
                <h1 class="display-4" id="plant_name" data-original-value=""></h1>
                <p class="text-muted" id="plant_nameStatus" data-original-value=""></p>
            </div>
        </div>

    <!-- Edit name and status -->
        <div class="row">
            <button id="editButton" class="btn btn-outline-secondary" style="display: none;">
                <i class="bi bi-pen"></i> Edit
            </button>
            <div id="saveCancelButtons" style="display: none;">
                <button id="saveChangesButton" class="btn">Save</button>
                <button id="cancelChangesButton" class="btn btn-light">Cancel</button>
            </div>
        </div>

        <div class="row align-items-start detail-view">
            <!-- Plant Image -->
            <div class="col-md-6 plant-image">
                <img id="plant_image" src="" alt="Image of " class="img-fluid">
            </div>

            <!-- Plant Details -->
            <div class="col-md-6 plant-details mb-5">
                <div class="list-group list-group-flush">
                    <div class="list-group-item" id="plant_date"></div>
                    <div class="list-group-item" id="plant_location"></div>
                    <div class="list-group-item" id="plant_description"></div>
                    <div class="list-group-item list-group-flush"><strong style="color: #a5a58d;">Size: </strong>
                        <div class="list-group-item" id="plant_height"></div>
                        <div class="list-group-item" id="plant_spread"></div>
                    </div>
                    <div class="list-group-item list-group-flush"><strong style="color: #a5a58d ;">Characteristics: </strong>
                        <div class="list-group-item" id="plant_leaves"></div>
                        <div class="list-group-item" id="plant_flowers"></div>
                        <div class="list-group-item"><strong>Flower Colour:</strong>
                            <span id="plant_flower_colours" style=""></span></div>
                        <div class="list-group-item" id="plant_flower_colours"></div>
                        <div class="list-group-item" id="plant_fruit_seeds"></div>
                        <div class="list-group-item" id="plant_sun_exposure"></div>
                    </div>
                    <div class="list-group-item"><strong>DBPedia Links:</strong><span id="dbpediaLabel"></span><ul id="dbpedia"></ul></div>

                    <div class="list-group-item" id="plant_creator"></div>
                </div>
            </div>
        </div>

        <!-- Chat Section -->
        <div class="row chat-section my-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">Live Chat</div>
                    <div class="card-body">
                        <div id="chatHistory" style="height: 300px; overflow-y: auto; background-color: #f8f9fa; padding: 1em;">
                            <!-- load chat history -->
                            <div id="chat_template">
                                <strong></strong>
                            </div>
                        </div>
                        <form id="chatForm" class="mt-3">
                            <div class="row">
                                <div class="col-md-11">
                                    <input type="text" id="chatText" class="form-control" placeholder="Type a message..." required>
                                </div>
                                <div class="col-md-1 ">
                                    <button id="chatSendButton" class="btn btn-block">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <%- include('./partials/footer.ejs') -%>

<!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
    <script src="/javascripts/plant.js"></script>
    <script src="/javascripts/idb-utility.js"></script>
    <script src="/javascripts/dbpediaHandler.js"></script>
</body>
</html>
